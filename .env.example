# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/social_analysis_db
# For development, you can use SQLite:
# DATABASE_URL=sqlite:///social_analysis.db

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-this-in-production
FLASK_ENV=development

# Apify Configuration
APIFY_API_TOKEN=your-apify-api-token-here

# Ollama Configuration
OLLAMA_API_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Gemini Configuration (optional)
GOOGLE_API_KEY=your-google-api-key-here

# Analysis Provider
# Set to 'ollama' or 'gemini' (can also be changed in Settings)
ANALYSIS_PROVIDER=ollama

# Security
BCRYPT_LOG_ROUNDS=12

# Application Settings
MAX_POSTS_PER_SCRAPE=1000
ANALYSIS_TIMEOUT=300
